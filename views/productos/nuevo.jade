extends ../default

block content
  include ../templates/nav
  
  div(class=['ui', 'container', 'grid', 'stackable'])
    div(class=['ten', 'wide', 'column'])
  
      h2(class=['ui', 'header', 'blue', 'dividing'])='Criar Produto'
      
      div(class='form-nuevoproducto')
        form(class=['ui', 'form'] action='http://localhost:3001/crearproducto' method='post')
          div(class=['ui', 'field'])
            label(for='nombre')='Nome do Produto'
            input(type= 'text' name='nombre' placeholder='Nome')
          div(class=['ui', 'two', 'fields'])
            div(class=['ui', 'field'])
              label(for='precio')='Preço'
              input(type= 'text' name='precio' placeholder='Preço')
            div(class=['ui', 'field'])
              label(for='stock')='Stock'
              input(type= 'text' name='stock' placeholder='Stock')
          button(class=['ui', 'button', 'basic', 'black'])= 'Criar Produto'
          div(class=['ui', 'message', 'error'])
          
      if info != undefined
        div(class=['ui', 'message', 'success'])
          i(class=['close', 'icon'])
          div(class='header')= 'Produto registrado'
          p= info
  
  script(src='/javascripts/validacion.js')