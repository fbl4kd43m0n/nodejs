extends ../default

block content
  include ../templates/nav
  
  div(class=['ui', 'container', 'grid', 'stackable'])
    div(class=['ten', 'wide', 'column'])
  
      h2(class=['ui', 'header', 'blue', 'dividing'])='Modificar Produto'
      
      div(class='form-nuevoproducto')
        form(class=['ui', 'form'] action='http://localhost:3001/editar' method='post')
          div(class=['ui', 'field'])
            label(for='nombre')='Nome do Produto'
            input(type='text' name='nombre' placeholder='Nome' value=producto[0].nombre)
          div(class=['ui', 'two', 'fields'])
            div(class=['ui', 'field'])
              label(for='precio')='Preço'
              input(type= 'text' name='precio' placeholder='Preço' value=producto[0].precio)
            div(class=['ui', 'field'])
              label(for='stock')='Stock'
              input(type= 'text' name='stock' placeholder='Stock' value=producto[0].stock)
              input(type= 'hidden' name='id_producto' value=producto[0].id_producto)
          button(class=['ui', 'button', 'basic', 'black'])= 'Modificar Produto'
          div(class=['ui', 'message', 'error'])
          
  
  script(src='/javascripts/validacion.js')